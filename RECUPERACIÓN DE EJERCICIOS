#include <iostream>
using namespace std;

///////////////////////////////////////////////////////////////////////////////////////////
bool par(int n){
	if(n%2==0){
		return 1;
	}
	return 0;
}

void numerospares(int n){
	for(int i=2;i<n;i++){
		if(i==n-2){
			cout<<i+1<<" ";
			break;
		}
		if(par(i)){
			cout<<i<<" , ";
		}
	}
}
/////////////////////////////////////////////////////////////////////

// enteros 

int sumatoria(int *s,int tam){
	if(tam==0)
		return 0;
	else{
		return s[tam-1] + sumatoria(s,tam-1);
	}
}


//////////////////////////////////////////////////
bool funcion(int *s,int tam){
	if(*s==*(s+(tam-1))){
		return true;
	}
	else{
		return false;
	}
	return funcion(s++,tam--);
	
}

bool funcionchar(char *s,int tam){
	if(*s==*(s+(tam-1))){
		return true;
	}
	else{
		return false;
	}
	return funcionchar(s++,tam--);
	
}

