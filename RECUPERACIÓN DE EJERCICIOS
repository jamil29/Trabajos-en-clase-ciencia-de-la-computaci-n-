void ordenarchar(char **ptr,int tam){
	for(int i=0;i<tam;i++){
		for(int j=0;j<tam-1;j++){
			int i=static_cast<int>(**ptr);
			int k=static_cast<int>(**(ptr+1));
			if(i>k){
				int val;
				val=**ptr;
				**ptr=**(ptr+1);
				**(ptr+1)=val;
			}
			ptr++;
		}
	}
}

