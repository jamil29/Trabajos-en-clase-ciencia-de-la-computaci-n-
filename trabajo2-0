		val=val%10000;
		v2=val/1000;
		val=val%1000;
		v3=val/100;
		val=val%100;
		v4=val/10;
		val=val%10;
		v5=val/1;
		
		cout<<v5<<"   "<<v4<<"   "<<v3<<"   "<<v2<<"   "<<v1;
		
}

void val32(){
	int x;
	cout<<"dame el promedio de la malla"<<endl;
	cin>>x;
	if(x>=90 and x<=100){
		cout<<"4";
	}
	if(x>=80 and x<=89){
		cout<<"3";
	}
	if(x>=70 and x<=79){
		cout<<"2";
	}
	if(x>=60 and x<=69){
		cout<<"1";
	}
	if(x<60){
		cout<<"0";
	}
			
}

int aleatorioEntero(int a, int b){
 return  a+rand()%(b-a+1);
}

void val34(){
		int x,t;
		x=aleatorioEntero(1,1000);
		
		cin>>t;
		if(t==x){
			cout<<"felicidades encontraste el numero"<<endl;
			
		}
		if(t>x){
			cout<<"muy arriba! :( no es el numero"<<endl;
		}
		if(t<x){
			cout<<"muy abajo! :( no es el numero"<<endl;
		}	
			
}
		
double val36(int x, int y)
{
 if (y==0)
     return 1;
 else
     return x*(val36(x,y-1));
}

void hanoi(int num,char A,char C,char B)
{
    if(num==1)
    {
         cout<<"Mueva el bloque "<<num<<" desde "<<A<<" hasta  "<<C<<endl;
             
    }
    else
    {
        hanoi(num-1,A,B,C);
        cout<<"Mueva el bloque "<<num<<" desde "<<A<<" hasta  "<<C<<endl;
        hanoi(num-1,B,C,A);
    }
}
