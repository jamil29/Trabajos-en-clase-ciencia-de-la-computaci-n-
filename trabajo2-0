}

void val22(){
	int x;
	cout<<"el tamaÃ±o del lado es : "<<endl;
	cin>>x;
	
	for(int i=0;i<x;i++){
				for(int y=0;y<x;y++){
					cout<<"*";
				}
				cout<<endl;
	}
}


void val24(){
	
	int val;
		cout<<"vame un numero de 5 digitos "<<endl;
		cin>>val;
		
		int v1,v2,v3,v4,v5;
		v1=val/10000;
		val=val%10000;
		v2=val/1000;
		val=val%1000;
		v3=val/100;
		val=val%100;
		v4=val/10;
		val=val%10;
		v5=val/1;
		
		cout<<v1<<"   "<<v2<<"   "<<v3<<"   "<<v4<<"   "<<v5;
	
}
int faren(int x){
		cout<< ((x * 9/5) + 32 )<<endl;

	}
	
	
int celci(int x){
		cout<< ((x - 32) * 5/9)<<endl ;
	}
	
	
void val26(){
	for(int i=0;i<=100;i++){
			celci(i);
	}
	for(int i=32;i<=212;i++){
		faren(i);
	}
}

bool perfecta(int num){
	int i , sum=0, mul=0;
      	
	for(i=1; i<num; i++) {
		mul=num%i;
		if(mul==0) {
			sum+=i;
		}
	}
	if(sum==num){
		return 1;
	}
	else
	return 0;
}

void val28(){
	for(int i=1;i<=1000;i++){
		if(perfecta(i)){
			cout<<i<<" ";
		}

	}
}

